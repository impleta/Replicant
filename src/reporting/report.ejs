<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .test-runner-output {
            border: 1px solid #d1d5da;
            border-radius: 6px;
            overflow: hidden;
            margin: 5px;
        }

        .test-output {
            background-color: #fff;
            display: flex;
            font-family: 'Roboto Mono', monospace;
            margin: 0;
            padding: 0;
        }

        .left-column,
        .right-column {
            overflow-x: auto;
            margin: 0;
            text-align: left;
            line-height: 1;
            font-size: 10px;
        }
        
        pre {
          background: #303030;
          color: #f1f1f1;
        }

.code-line {
  display: inline-block;
  line-height: 1rem;
  counter-increment: line;
}

.code-line:before {
  content: counter(line);
  display: inline-block;
  padding: 0;
  margin: 0 .5em 0 0;
  color: #888;
  text-align: right;
  width: 1.5em; /* this should be variable based on number of lines. 0.5 for each digit */
}

    </style>
    <title>Responsive HTML Page</title>
</head>
<body>
  <!-- template.ejs -->

<div class="test-runner-output">
  <span><%= `${runResult.successfulTestsCount} of ${runResult.totalTests} tests Succeeded`%> </span>
  <span><%= runResult.date %> </span>
  <% testReports.forEach((report) => { -%>
    <div>
      <span><%= report.filePath %></span>
      <span><%= report.success ? "Succeeded" : "Failed" %></span>
      <div class="test-output">
<pre class="left-column" contenteditable="false" spellcheck="false">
<% report.lines.forEach((line) => { -%><span class="code-line"><%= line %></span>
<% }); -%>
    </pre>
    <div class="right-column">
      <% report.lines.forEach((line) => { -%><div><%= "line" %></div>
<% }); -%>
    </div>
  </div>
    </div>
  <% }); -%>
</div>
