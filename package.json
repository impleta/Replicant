{
  "name": "@impleta/repl-app",
  "version": "2.1.0",
  "description": "A library for creating nodejs based REPL environments",
  "main": "./build/src/replapp.js",
  "files": [
    "build/src"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "dev": "tsc-watch --onSuccess \"npm run postcompile\"",
    "postcompile": "npm run addJsSuffix && npm run copyDts && npm run fixDts && echo 'Ready...'",
    "addJsSuffix": "npx replace-in-file --configFile=replace-config.cjs --quiet",
    "copyDts": "npx copyfiles -f \"build/src/**/*.d.ts\" @types",
    "fixDts": "npx replace-in-file --configFile=replace-config-dts.cjs --quiet",
    "fix": "gts fix",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  },
  "author": "impleta",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/glob": "^8.0.1",
    "@types/jest": "^29.5.5",
    "@types/multistream": "^4.1.0",
    "@types/node": "^18.16.3",
    "copyfiles": "^2.4.1",
    "gts": "^3.1.1",
    "jest": "^29.7.0",
    "ncp": "^2.0.0",
    "replace-in-file": "^6.3.5",
    "ts-jest": "^29.1.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "chai": "^4.3.8",
    "chalk": "^5.3.0",
    "glob": "^8.1.0",
    "node": "^20.6.0"
  }
}
