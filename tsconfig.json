{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "module": "ESNext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2019"]
  },
  "include": [
      "src/**/*.ts"
    , "index.ts"
  ],
  "exclude": ["build", "node_modules", "**/*.spec.ts", "tests/**/*.js", "@types"]
}